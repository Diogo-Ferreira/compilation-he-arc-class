

animation("example","div") {

    @ "width:100px"
    @ "height:100px"
    @ "background-color:red"
    @ "animation-duration:4s"


    keyframes{
        for 0 to 100 by 25 {

            cpt: 0
            cond: ix % 2

            if cond is 0 {
                cpt: 1
            }

            frame(ix){
                @ "background: rgb($cpt,0,0)"
            }
        }
    }
}





